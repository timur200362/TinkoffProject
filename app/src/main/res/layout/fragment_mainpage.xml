            app:layout_constraintBottom_toBottomOf="@+id/img_breakfast"
            app:layout_constraintStart_toEndOf="@+id/img_totalDrunk"
            app:layout_constraintTop_toTopOf="@+id/img_breakfast" />

        <ImageView
